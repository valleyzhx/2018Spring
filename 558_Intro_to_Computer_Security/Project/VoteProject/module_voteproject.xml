<?xml version="1.0" encoding="UTF-8"?>
<project name="module_voteproject" default="compile.module.voteproject">
  <dirname property="module.voteproject.basedir" file="${ant.file.module_voteproject}"/>
  
  <property name="module.jdk.home.voteproject" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.voteproject" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.voteproject" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.voteproject" value="-encoding UTF-8 -source 9 -target 9 ${compiler.args}"/>
  
  <property name="voteproject.output.dir" value="${module.voteproject.basedir}/out/production/VoteProject"/>
  <property name="voteproject.testoutput.dir" value="${module.voteproject.basedir}/out/test/VoteProject"/>
  
  <path id="voteproject.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="voteproject.module.production.classpath">
    <path refid="${module.jdk.classpath.voteproject}"/>
  </path>
  
  <path id="voteproject.runtime.production.module.classpath">
    <pathelement location="${voteproject.output.dir}"/>
  </path>
  
  <path id="voteproject.module.classpath">
    <path refid="${module.jdk.classpath.voteproject}"/>
    <pathelement location="${voteproject.output.dir}"/>
  </path>
  
  <path id="voteproject.runtime.module.classpath">
    <pathelement location="${voteproject.testoutput.dir}"/>
    <pathelement location="${voteproject.output.dir}"/>
  </path>
  
  
  <patternset id="excluded.from.module.voteproject">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.voteproject">
    <patternset refid="excluded.from.module.voteproject"/>
  </patternset>
  
  <path id="voteproject.module.sourcepath">
    <dirset dir="${module.voteproject.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.voteproject" depends="compile.module.voteproject.production,compile.module.voteproject.tests" description="Compile module VoteProject"/>
  
  <target name="compile.module.voteproject.production" depends="register.custom.compilers" description="Compile module VoteProject; production classes">
    <mkdir dir="${voteproject.output.dir}"/>
    <javac2 destdir="${voteproject.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.voteproject}/javac">
      <compilerarg line="${compiler.args.voteproject}"/>
      <bootclasspath refid="voteproject.module.bootclasspath"/>
      <classpath refid="voteproject.module.production.classpath"/>
      <src refid="voteproject.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.voteproject"/>
    </javac2>
    
    <copy todir="${voteproject.output.dir}">
      <fileset dir="${module.voteproject.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.voteproject.tests" depends="register.custom.compilers,compile.module.voteproject.production" description="compile module VoteProject; test classes" unless="skip.tests"/>
  
  <target name="clean.module.voteproject" description="cleanup module">
    <delete dir="${voteproject.output.dir}"/>
    <delete dir="${voteproject.testoutput.dir}"/>
  </target>
</project>